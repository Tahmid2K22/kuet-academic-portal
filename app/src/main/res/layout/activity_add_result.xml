<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_result_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etRoll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/roll_hint"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="no" />

        <EditText
            android:id="@+id/etYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Year (1-4)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="no" />

        <EditText
            android:id="@+id/etTerm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Term (1-2)"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="no" />

        <EditText
            android:id="@+id/etGpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/gpa_hint"
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:autofillHints="no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ct_marks_label"
            android:textColor="#555555"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etCtMarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/ct_marks_hint"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:autofillHints="no" />

        <Button
            android:id="@+id/btnSaveResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_result"
            android:backgroundTint="#2C3E50"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
